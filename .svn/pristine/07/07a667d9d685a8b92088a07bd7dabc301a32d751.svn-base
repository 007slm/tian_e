<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/popup_window_bg"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/tv_add_to_bookmark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/add_to_bookmark_selector"
        android:padding="10dp"
        android:text="@string/save_to_bookmarks"
        android:textColor="?textColorInverseClickable"
        android:textSize="20dp" 
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_line" />

    <TextView
        android:id="@+id/tv_add_to_homescreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/add_to_bookmark_selector"
        android:padding="10dp"
        android:text="@string/add_to_home_screen"
        android:textColor="?textColorInverseClickable"
        android:textSize="20dp" 
        />

</LinearLayout>