<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/menu_setting"
            style="@style/MenuTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/menu_setting"
            android:text="@string/menu_setting" />

        <TextView
            android:id="@+id/menu_find"
            style="@style/MenuTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/menu_find"
            android:text="@string/menu_find" />

        <TextView
            android:id="@+id/menu_save"
            style="@style/MenuTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/menu_save"
            android:text="@string/menu_save"
            android:visibility="gone" />

        <TextView
            android:id="@+id/menu_pageinfo"
            style="@style/MenuTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/menu_pageinfo"
            android:text="@string/menu_pageinfo" />

        <TextView
            android:id="@+id/menu_help"
            style="@style/MenuTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/menu_about"
            android:text="@string/menu_about" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        >

         <TextView
            android:id="@+id/menu_history"
            style="@style/MenuTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/menu_history"
            android:text="@string/menu_history" />
        
        <TextView
            android:id="@+id/menu_gesture_switcher"
            style="@style/MenuTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        
        <TextView
            style="@style/MenuTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@null"
             />
        
        <TextView
            style="@style/MenuTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@null"
            />
        
        <TextView
            android:id="@+id/menu_stub"
            style="@style/MenuTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/menu_about"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>