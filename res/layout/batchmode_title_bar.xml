<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/browser_action_bar_padding"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <!-- @dimen/browser_action_bar_height -->
    
    <com.orange.browser.AlwaysMarqueeTextView
    	android:id="@+id/already_text_line2"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:text="@string/add_to_readinglist_hint" 
    	style="@style/ActionBarLine1"
    	android:layout_marginLeft="5dp"
    	android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:paddingRight="75dp"
    	android:layout_centerVertical="true"/>
    
    <View 
	    android:id="@+id/actbar_chooselink_left_space"
	    android:layout_toRightOf="@id/already_text_line2"
	    android:layout_width="@dimen/browser_actbar_separator_padding_hori"
	    android:layout_height="@dimen/browser_action_bar_height" />

	<LinearLayout
	    android:id="@+id/confirm_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">
    
    
	<ImageView 
	    android:id="@+id/actbar_normal_separator"
	    android:src="@drawable/vertical_separator"
	    android:layout_width="wrap_content"
	    android:layout_height="@dimen/browser_action_bar_height" />
	
	
	<ImageView 
	    android:id="@+id/confirm_btn"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:src="@drawable/batchmode_confirm_btn_selector"
	    android:paddingLeft="@dimen/batchmode_confirm_btn_padding_left"
	    android:paddingRight="@dimen/batchmode_confirm_btn_padding_right"
	    android:gravity="center_vertical"/>
	
	</LinearLayout>
	
